<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.naveenkumar.mykc.platter">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BILL"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="140dp"

        android:text="Total Bill : 00"
        android:id="@+id/tbill"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:layout_height="35dp"
        android:textSize="18dp"

        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="11dp"
        android:background="#55FF0000"
        android:shadowColor="#f8be5b"
        android:text="CALL A WAITER"
        android:id="@+id/call_waiter"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/payment"
        android:layout_toStartOf="@+id/payment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="11dp"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:text="Proceed to payment"
        android:id="@+id/payment"
        android:layout_alignTop="@+id/call_waiter"
        android:layout_toLeftOf="@+id/order"
        android:layout_toStartOf="@+id/order"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />
    <View android:id="@+id/separator1"
        android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View android:id="@+id/separator7"
        android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/separator4"
        android:layout_toLeftOf="@+id/separator5"
        android:layout_toStartOf="@+id/separator5" />

    <View android:id="@+id/separator3"
        android:background="#ffffff"
        android:layout_width = "2dp"
        android:layout_height="240dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_above="@+id/separator7" />
    <View android:id="@+id/separator4"
        android:background="#ffffff"
        android:layout_width = "2dp"
        android:layout_height="240dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/call_waiter"
        android:layout_alignEnd="@+id/call_waiter"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />
    <View android:id="@+id/separator5"
        android:background="#ffffff"
        android:layout_width = "2dp"
        android:layout_height="240dp"
        android:layout_alignRight="@+id/order"
        android:layout_alignEnd="@+id/order"
        android:layout_below="@+id/textView6" />
    <View android:id="@+id/separator6"
        android:background="#ffffff"
        android:layout_width = "2dp"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6" />

    <Button
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:textSize="11dp"
        android:text="Place the Order"
        android:id="@+id/order"
        android:background="#55FF0000"
        android:shadowColor="#f8be5b"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/list3"
        android:layout_alignEnd="@+id/list3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DISH"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:id="@+id/textView9"
        android:layout_below="@+id/separator1"
        android:layout_toLeftOf="@+id/separator4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />
    <ListView
        android:id="@+id/list3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="#000"
        android:dividerHeight="0dp"
        android:layout_below="@+id/textView9"
        android:layout_above="@+id/separator7"
        android:layout_marginBottom="20dp">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/separator3"
        android:layout_alignStart="@+id/separator3"
        android:layout_toLeftOf="@+id/separator5"
        android:layout_toStartOf="@+id/separator5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QUANTITY  "
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/payment"
        android:layout_alignEnd="@+id/payment"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />
</RelativeLayout>
