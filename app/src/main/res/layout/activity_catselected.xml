<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.naveenkumar.kitchenconnect.category1">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:id="@+id/horizontalScrollView">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cat_dessert_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Desserts"/>
            <Button
                android:id="@+id/cat_curries_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Curries"/>
            <Button
                android:id="@+id/cat_soups_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Soups"/>
            <Button
                android:id="@+id/cat_continental_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Continental"/>
            <Button
                android:id="@+id/cat_biryani_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Biryani"/>
            <Button
                android:id="@+id/cat_chinese_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Chinese"/>
            <Button
                android:id="@+id/cat_starters_text1"
                android:layout_width="120dp"
                android:background="#55FF0000"

                android:shadowColor="#f8be5b"
                android:layout_height="wrap_content"
                android:text="Starters"/>
        </LinearLayout>

    </HorizontalScrollView>


    <ListView
        android:id="@+id/list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/call_waiter1"
        android:divider="#000"
        android:dividerHeight="0dp"
        android:layout_below="@+id/horizontalScrollView">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="CALL A WAITER"
        android:id="@+id/call_waiter1"
        android:textSize="12dp"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:layout_alignBaseline="@+id/bill"
        android:layout_alignBottom="@+id/bill"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BILL : 00"
        android:id="@+id/bill"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:background="#55FF0000"

        android:shadowColor="#f8be5b"
        android:text="VIEW PLATTER"
        android:id="@+id/view_platter"
        android:layout_height="35dp"
        android:textSize="11dp"
        android:layout_alignBottom="@+id/call_waiter1"
        android:layout_alignRight="@+id/list2"
        android:layout_alignEnd="@+id/list2"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />



</RelativeLayout>
